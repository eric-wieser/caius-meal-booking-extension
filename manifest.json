{
	"manifest_version": 2,

	"name": "Caius Meal booking helper",
	"version": "0.2.1",
	"icons": {
		"128": "crest.png"
	},
	"content_scripts": [
		{
			"matches": ["https://www.mealbookings.cai.cam.ac.uk/*"],
			"js": [
				"jquery-1.10.2.js",
				"jquery.tmpl.min.js",
				"sugar.js",
				"utils.js",
				"HallType.js",
				"HallSummary.js",
				"main.js"
			],
			"run_at" : "document_start"
		}
	],
	"web_accessible_resources": [
		"ajax-loader.gif"
	],
	"permissions": [
		"storage",
		"https://www.mealbookings.cai.cam.ac.uk/"
	],
	"background": {"page": "background.html"}
}